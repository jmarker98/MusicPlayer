<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:id="@+id/fr_addsong"
             android:layout_height="match_parent"
             tools:context=".screen.fragment.FragmentAddSongsforPlaylist">

    <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/img_cancle"
                android:src="@drawable/baseline_keyboard_arrow_left_black_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_title"
                android:text="Add Songs"
                android:textSize="7pt"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_marginLeft="60dp"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/img_done"
                android:src="@drawable/done"
                android:layout_width="30dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_height="25dp"/>
    </RelativeLayout>
    <LinearLayout
            android:id="@+id/ln_listsong"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/rl_header"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_songAddforPlaylist"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_below="@id/rl_header"
                android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</FrameLayout>