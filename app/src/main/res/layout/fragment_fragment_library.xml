<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screen.fragment.FragmentLibrary">
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:text="Library"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_library"
                    android:textSize="13pt"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:padding="10dp"
                    android:id="@+id/lv_library"/>

            <TextView
                    android:text="Recently Added"
                    android:layout_width="match_parent"
                    android:textSize="11pt"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_added"/>
            <GridLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:columnCount="2">
                <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/applenobackground"/>
                <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/applenobackground"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name of Song"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name of Song"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center"/>
                <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/applenobackground"/>
                <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/applenobackground"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name of Song"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name of Song"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center"/>
            </GridLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</FrameLayout>