<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_songPl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/img_thumbPl"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/applenobackground"/>

        <TextView
                android:id="@+id/tv_namePl"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_toRightOf="@id/img_thumbPl"
                android:layout_toLeftOf="@id/cb_playlist"
                android:text="Name of Song"
                android:textColor="@android:color/black"/>

        <TextView
                android:id="@+id/tv_singerPl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_namePl"
                android:layout_toRightOf="@id/img_thumbPl"
                android:text="Singer"
        />
        <CheckBox
                android:id="@+id/cb_playlist"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
